import java.applet.Applet;
import java.awt.CheckboxGroup;
import java.awt.TextField;
import java.awt.Checkbox;
import java.awt.Event;
import java.awt.GridLayout;
import java.awt.Panel;


public class Applet5 extends Applet {

    CheckboxGroup cbg;
    Checkbox cb1, cb2, cb3, cb4, cb5, cb6;
    TextField tf;
    Panel p1, p2;

    public void init(){
        
        //Set overall layout of the applet
        setLayout(new GridLayout(1,2));

        // Radio Buttons
        cbg = new CheckboxGroup();
        cb1 = new Checkbox("Tour 1", cbg, false);
        cb2 = new Checkbox("Tour 2", cbg, false);
        cb3 = new Checkbox("Tour 3", cbg, false);
        // Check boxes
        cb4 = new Checkbox("Manali", false);
        cb5 = new Checkbox("Shimla", false);
        cb6 = new Checkbox("Dehradun", false);
        // Textfield
        tf = new TextField();
        // Panels
        p1 = new Panel();
        p2 = new Panel();
        //Set Layout for each panel
        p1.setLayout(new GridLayout(3,1));
        p2.setLayout(new GridLayout(4,1));

        p1.add(cb1);
        p1.add(cb2);
        p1.add(cb3);

        p2.add(cb4);
        p2.add(cb5);
        p2.add(cb6);
        p2.add(tf);

        add(p1);
        add(p2);

    }
    
}

